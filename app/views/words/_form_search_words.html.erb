<%= form_tag words_path, method: :get, remote: true do %>
  <%= select_tag :category_id, options_for_select(@categories.collect{|item| [item.title,item.id]}), class: "col-md-4 col-md-offset-3"%>  
  <% Word::STATUS.each_with_index do |status, index| %>
    <%= radio_button_tag :state, status, checked: index == 0 ? true : false %>
    <%= label_tag :state, status %>
  <% end %>
  <div align="center">
    <%= submit_tag t(:filter, scope: :words), class: "btn btn-primary" %>
  </div>
<% end %>
