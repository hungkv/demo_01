<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t :create_words, scope: :admin_words %></h4>
      </div>
      <%= form_for [:admin, @word], html: {method: :POST} do |f| %>
        <div class="modal-body">
          <label><%= t :category, scope: :admin_words %></label><br/>
          <div class="form-group">
            <%= f.select :category_id, @categories.collect{|item| [item.title, item.id]}, class: "col-md-4 col-md-offset-3"%>
          </div>
          <label><%= t :content, scope: :admin_words %></label><br/>
          <div class="form-group">
            <%= f.text_field :content, autocomplete: "off", class: "form-control", placeholder: t(:p_content, scope: :admin_words) %>
          </div>
          <%= f.fields_for :answers do |builder| %>
            <%= render "answer_fields", f: builder %>
          <% end %>
          <div class="add-answers"></div>
          <p><%= link_to_add_fields t(:add_answer), f, :answers %></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t :close, scope: :admin_categories %></button>
          <%= f.submit t(:save, scope: :admin_words), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
