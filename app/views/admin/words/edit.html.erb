<p><strong><%= t :edit_words, scope: :admin_words %></strong></p>
<%= form_for [:admin, @word], html: {method: :PUT} do |f| %>
  <div class="modal-body">
    <label><%= t(:category, scope: :admin_words) %></label><br/>
    <div class="form-group">
      <%= f.select :category_id, @categories.collect{|item| [item.title,item.id]}, class: "col-md-4 col-md-offset-3"%>
    </div>
    <label><%= t :content, scope: :admin_categories %></label><br/>
    <div class="form-group">
      <%= f.text_field :content, autocomplete: "off", class: "form-control", placeholder: t(:p_content, scope: :admin_categories) %>
    </div>
    <%= f.fields_for :answers do |ff| %>
      <label><%= t :content, scope: :admin_answers %></label><br/>
      <div class="form-group">
        <%= ff.text_field :content, autocomplete: "off", class: "form-control", placeholder: t(:p_content, scope: :admin_words) %>
        <%= ff.radio_button :is_true, true %> <%= f.label :is_true,  t(:is_true, scope: :admin_words) %>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <%= f.submit t(:save, scope: :admin_categories), class: "btn btn-primary" %>
  </div>
<% end %>
