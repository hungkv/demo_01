<div class="row">
  <p><strong><%= t(:edit_profile, scope: :edit_profile) %></strong></p>
  <hr/>
  <%= form_for current_user, as: :user, url: user_path(current_user), html: {method: :PUT} do |f| %>
    <label><%= t(:email, scope: :edit_profile) %>: <%= current_user.email %></label><br/><br/>
    <p class="center">
      <%= image_tag current_user.avatar, id: "avatar_picture" %>
    </p>
    <%= f.file_field :avatar, id: "image_avatar_attach_content" %>
    <br/>
    <div class="form-group">
      <%= f.text_field :email, autofocus: true, class: "form-control", placeholder: t(:enter_email, scope: :edit_profile) %>
    </div>
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: t(:enter_name, scope: :edit_profile) %>
    </div>
    <div class="form-group">
      <i>(<%= t(:leave, scope: :edit_profile) %>)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t(:password, scope: :edit_profile) %>
    </div>
    <div class="form-group">
                                            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: t(:password_confirm, scope: :edit_profile) %>
    </div>
    <p><%= f.submit t(:update, scope: :edit_profile), class: "btn btn-primary" %></p>
    <br/>
  <% end %>
</div>
